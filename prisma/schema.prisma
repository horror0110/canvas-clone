generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Teacher {
  id                   String   @id @default(cuid()) @map("_id")
  name                 String
  image                String
  parentsName          String
  irgenshil            String
  registerNumber       String
  date                 String
  familyName           String
  sex                  String
  country              String
  city                 String
  district             String
  address              String
  liveCity             String
  liveDistrict         String
  liveAddress          String
  importantPhoneNumber String
  email                String
  addressEmail         String
  bornCountry          String
  vndes                String
  bornType             String
  bornAddress          String
  education            String
  profession           String
  award                String
  passportNumber       String
  married              String
  tsereg               String
  tetgever             String
  description          String
  blood                String
  drive                String
  driveNumber          String
  para                 String
}
